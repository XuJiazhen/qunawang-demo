ellipsis()
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis
header()
  height .88rem
  line-height .88rem
  background $bgColor
  position relative
  display flex
  color #fff
headerLeft()
  float left
  display inline-block
  width .4rem
  padding 0 .2rem
  font-size .36rem
  font-weight bold
  color #fff
cityList()
  overflow hidden
  position relative
  background #fff
  font-weight normal
  z-index 0
cityListLI()
  height .9rem
  line-height .9rem
  float left
  text-align center
  z-index 10
  position relative
cityListA()
  display block
  color #212121